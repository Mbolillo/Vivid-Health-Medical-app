<html lang="en">
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" text-align:center>
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
  body {font-family: "Lato", sans-serif}
  .mySlides {display: none}
</style>

<div class="d-flex" id="wrapper">

  <!-- Page Content -->
  <div id="page-content-wrapper" class="container-fluid">

    <nav class="navbar navbar-expand-lg border">
      
      <a class="navbar-brand" href="#" >
        <%= image_tag("logo.png", :size => "60x60", class: "img-responsive", id: "navbar-logo" ) %> 
        <%= link_to "Vivid Health Dublin", root_path, id: "logo" %>
      </a>
      

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
                <%= link_to "Our Doctors",  static_pages_home_path(anchor: 'team'), class: "nav-link" %>
        </li>
          <% if user_signed_in? %>
            <% if current_user.admin %>
              <li class="nav-item">
                <%= link_to "Patients", patients_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Doctors", doctors_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Consultations", consultations_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
              </li>
            <% elsif current_user.person.type == "Patient" %>
              <li class="nav-item">
                <%= link_to "Appointments", patient_appointments_path(current_user.person), class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Prescriptions", patient_prescriptions_path(current_user.person), class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Consultations", patient_consultations_path(current_user.person), class: "nav-link" %>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  My Account
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                  <%= link_to "Profile", patient_path(current_user.person), class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
                  <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                </div>
              </li>
            <% elsif current_user.person.type == "Doctor" %>
              <li class="nav-item">
                <%= link_to "Appointments", doctor_appointments_path(current_user.person), class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Prescriptions", doctor_prescriptions_path(current_user.person), class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Consultations", consultations_path, class: "nav-link" %>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  My Account
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                  <%= link_to "Profile", doctor_path(current_user.person), class: "dropdown-item" %>
                  <div class="dropdown-divider"></div>
                  <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                </div>
              </li>
            <% end %>
          <% else %>
              <li class="nav-item">
                <%= link_to "Login", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
              </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</div>
