
<%= simple_form_for(@person) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :photo %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :dob %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :gender %>
    <%= f.input :discipline %>
    <%= f.input :hourly_rate %>
    <%= f.input :bio %>
    <%= f.input :type %>
    <%= f.input :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
