<%= simple_form_for(@doctor) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :dob, as: :date, html5: true %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :gender, as: :radio_buttons, collection: [['0', 'female'], ['1', 'male']], label_method: :second, value_method: :first %>
    <%= f.input :discipline %>
    <%= f.input :hourly_rate %>
    <%= f.input :bio %>

  </div>

  <input class="btn btn-primary" type="submit" value="Update Doctor" name="commit">
   
<% end %>


